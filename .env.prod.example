# Production defaults for docker-compose.prod.yml
# Copy to .env.prod on EC2 and replace placeholders.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=replace_with_strong_password
POSTGRES_DB=recommend

DB_USER=postgres
DB_PASSWORD=replace_with_strong_password
DB_NAME=recommend
DB_HOST=postgres
DB_PORT=5432

PORT=5001
RECOMMENDER_URL=http://recommender:5000
CORS_ORIGINS=https://your-domain.example
JWT_SECRET=replace_with_long_random_secret

# Client build variables (compile-time)
VITE_API_URL=https://your-domain.example/api
VITE_BASE_PATH=/
CADDY_DOMAIN=your-domain.example

SEED_BATCH_SIZE=2000
SEED_FORCE=0
